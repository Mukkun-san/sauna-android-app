<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="SAUNA DETAILS"
            android:textColor="@color/design_default_color_primary"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"></Space>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:layout_gravity="center"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="@string/opt3.make" />

            <TextView
                android:id="@+id/display_make"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="@string/opt3.code" />

            <TextView
                android:id="@+id/display_code"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="@string/opt3.woodType" />

            <TextView
                android:id="@+id/display_woodType"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="@string/opt3.capacity" />

            <TextView
                android:id="@+id/display_capacity"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:textSize="20dp"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="@string/opt3.heating" />

            <TextView
                android:id="@+id/display_heating"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20sp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:gravity="right|center_vertical"
                android:text="@string/opt3.price"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/display_price"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center" />

    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/display_img"
        android:layout_width="400dp"
        android:layout_height="300dp"
        fresco:placeholderImage="@drawable/placeholder"
        android:layout_gravity="center" />


</LinearLayout>